@model List<NICO.Entities.Loan>

<h1>Loan Information</h1>
<br>
<a class="btn btn-primary" href="@Url.Action("AddLoan", "Another", new { id = ViewBag.BorrowerId })">Add Loan</a>
<br><br>

@if (Model.Count == 0)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Loan ID</th>
                <th>Borrower</th>
                <th>Loan Plan</th>
                <th>Principal Loan</th>
                <th>Interest</th>
                <th>Date</th>
                <th>Monthly Payment</th>
                <th>Total Payment</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.Id</td>
                    <td>@loan.Borrower</td>
                    <td>@loan.LoanPlan</td>
                    <td>@loan.PrincipalLoan</td>
                    <td>@loan.Interest</td>
                    <td>@loan.Date</td>
                    <td>@loan.Monthly</td>
                    <td>@loan.Total</td>
                    <td>
                        <button class="btn btn-danger" onclick="deleteLoan(@loan.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        function deleteLoan(id) {
            if (confirm("Are you sure you want to delete this loan?")) {
                fetch(`/Another/DeleteLoan?id=${id}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to delete loan.');
                    }
                });
            }
        }
    </script>
}